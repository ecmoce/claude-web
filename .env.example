# ==============================================
#  Claude Web Gateway - Environment Configuration
# ==============================================

# ──────────────────────────────────────────────
#  GitHub OAuth App (https://github.com/settings/developers)
# ──────────────────────────────────────────────
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# ──────────────────────────────────────────────
#  Access Control
# ──────────────────────────────────────────────
# GitHub usernames (comma-separated, 소문자로)
ALLOWED_USERS=ecmoce,another_user

# ──────────────────────────────────────────────
#  JWT Authentication
# ──────────────────────────────────────────────
# JWT secret (generate: python3 -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET=change_me_to_random_hex_32_chars

# ──────────────────────────────────────────────
#  Claude CLI Configuration
# ──────────────────────────────────────────────
CLAUDE_CMD=claude
CLAUDE_MODEL=opus
CLAUDE_TIMEOUT=300
MAX_CONCURRENT=3

# ──────────────────────────────────────────────
#  Server Configuration
# ──────────────────────────────────────────────
HOST=127.0.0.1
PORT=8450
BASE_URL=https://your-domain.com

# ──────────────────────────────────────────────
#  Session Management
# ──────────────────────────────────────────────
SESSION_TTL_HOURS=24

# ──────────────────────────────────────────────
#  Development Mode
# ──────────────────────────────────────────────
# true: 개발 모드 (로깅 증가, 디버그 정보)
# false: 프로덕션 모드 (최적화, 보안 강화)
DEV_MODE=false
